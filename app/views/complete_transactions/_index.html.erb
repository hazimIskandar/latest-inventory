
<h3>Senarai Transaksi Jualan</h3>
<div class="box2"></div>Bahan Kurang
<div class="table-responsive">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Tarikh Transaksi</th>
      <th>Jenis Transaksi</th>
      <th>Kuantiti</th>
      <th>Jumlah Harga Jualan</th>
      <th>Harga Jualan Seunit</th>
      <th>Pembeli</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @complete.complete_transactions.each do |complete_transaction| %>
      <% if complete_transaction.f_type === "kurang"%>
        <tr class="info">
      <%else%>
        <tr>
      <%end%>
        <td><%= complete_transaction.f_date %></td>
        <td><%= complete_transaction.f_type %></td>
        <td><%= complete_transaction.f_quantity %></td>
        <td><%= number_to_currency(complete_transaction.f_total_sell, unit:"RM ") %></td>
        <td><%= number_to_currency(complete_transaction.f_unit_sell, unit: "RM ") %></td>
        <td><%= complete_transaction.f_buyer %></td>
        <td><%= link_to 'Papar', complete_complete_transaction_path(@complete, complete_transaction) %></td>
        <td><%= link_to 'Delete', complete_complete_transaction_path(@complete, complete_transaction), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to new_complete_complete_transaction_path(@complete) do%>
  <button class="btn btn-primary">Tambah Bahan</button>
<%end%>
<%= link_to kurang_complete_complete_transactions_path(@complete) do%>
  <button class="btn btn-info">Tolak Bahan</button>
<%end%>






