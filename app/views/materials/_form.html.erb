<%= form_for(@material) do |f| %>
  <% if @material.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@material.errors.count, "error") %> prohibited this material from being saved:</h2>

      <ul>
      <% @material.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Nama" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :unit, "Unit e.g: 1kg, 100g, ...." %><br>
    <%= f.text_field :unit %>
  </div>
  <div class="field">
    <%= f.label :minimum_stock, "Minimum Stok" %><br>
    <%= f.number_field :minimum_stock %>
  </div>
  <div class="field">
    <%= f.hidden_field :current_stock, :value => 0 %>
  </div>

  <%= f.fields_for :raw_transactions do |p|%>
    <div class="field">
      <%= p.label :t_type, "Jenis Transaksi" %><br>
      <%= p.radio_button :t_type, 'tambah', :checked => true %>
      <%= label :t_type_tambah, 'tambah' %>
      
    </div>
    <div class="field">
      <%= p.label :t_date, "Tarikh Transaksi" %><br>
      <%= p.date_select :t_date %>
    </div>
    
    

    <div class="field">
      <%= p.label :t_quantity, "Kuantiti" %><br>
      <%= p.number_field :t_quantity %>
    </div>

    <div class="field">
      <%= p.label :t_price_unit, "Harga Seunit" %><br>
      <%= p.text_field :t_price_unit %>
    </div>

    <div class="field">
      <%= p.label :t_supplier, "Pembekal" %><br>
      <%= p.text_field :t_supplier %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Hantar", class:"btn btn-primary" %>
  </div>
<% end %>
