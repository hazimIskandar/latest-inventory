<h1>Edit <%= @complete.name%></h1>

<%= form_for(@complete) do |f| %>
  <% if @complete.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@complete.errors.count, "error") %> prohibited this complete from being saved:</h2>

      <ul>
      <% @complete.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Nama Barang Jualan" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :unit, "Unit(kilo, gram, ...)" %><br>
    <%= f.text_field :unit %>
  </div>
  <div class="field">
    <%= f.label :minimum_stock, "Minimum Stok" %><br>
    <%= f.number_field :minimum_stock %>
  </div>
  

  <div class="actions">
    <%= f.submit "Simpan", class: "btn btn-primary" %>
  </div>
<% end %>


