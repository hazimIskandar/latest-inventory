<h2>Daftar</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :business_name, "Nama Perniagaan" %><br />
    <%= f.text_field :business_name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :email, "Email" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, "Kata Laluan" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> minimum karakter)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Pengesahan Kata Laluan" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Daftar", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
